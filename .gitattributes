# Auto detect text files and perform LF normalization
* text=auto

# PHP files
*.php text eol=lf diff=php

# Composer files
composer.json text eol=lf
composer.lock text eol=lf linguist-generated=true

# Documentation
*.md text eol=lf
*.txt text eol=lf
README* text eol=lf
LICENSE text eol=lf

# ZPL files (text format)
*.zpl text eol=lf

# Font files (binary)
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary

# Image files (binary)
*.svg binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary

# Archives
*.zip binary
*.tar binary
*.gz binary

# Git config files
.gitignore text eol=lf
.gitattributes text eol=lf

# IDE files
.editorconfig text eol=lf

# Export ignore
/.gitattributes export-ignore
/.gitignore export-ignore
/examples/ export-ignore
/tests/ export-ignore
/.github/ export-ignore
